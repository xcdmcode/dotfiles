configuration {
  timeout {
      action: "kb-cancel";
      delay:  0;
  }

  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

* {
  font: "Iosevka Nerd Font 11";
}

window {
  width: 100%;
  height: 25px;
  anchor: north;
  location: north;
  children: [ horibox ];
  padding: 0px 0px 2px 0px;
  background-color: #1d1f21;
  border: 0;
}

horibox {
  orientation: horizontal;
  children: [ inputbar, listview ];
}

inputbar {
  children: [ entry ];
  width: 5em;
}

entry {
  placeholder: "Run...";
  padding: 2px;
  text-color: #c5c8c6;
}

listview {
  layout: horizontal;
  border: 0;
  lines: 100;
}

element {
  padding: 0px 10px;
}

element normal normal, element normal active, element alternate normal {
  background-color: #303336;
  text-color: #c5c8c6;
  border: 0;
}

element selected normal {
  background-color: #c5c8c6;
  text-color: #303336;
}

